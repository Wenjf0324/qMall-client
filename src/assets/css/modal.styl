
.modal
    width 100%
    height 100%
    position fixed
    top 0
    left 0
    z-index 10
    &.slide-enter-active, &.slide-leave-active
        transition opacity 250ms
    &.slide-enter, &.slide-leave-to
        opacity 0
    .mask
        width 100%
        height 100%
        position fixed
        top 0
        left 0
        background rgba(0, 0, 0, 0.5)
    .modal-dialog
        width 660px
        height auto
        border-radius 6px
        overflow hidden
        background #fff
        position absolute
        top 45%
        left 50%
        transform translate(-50%, -50%)
        .modal-header
            height 60px
            background #f5f5f5
            padding 0 25px
            line-height 60px
            font-size 16px
            position relative
            .icon
                font-size 22px
                position absolute
                right 25px
                top 20px
                transition transform 0.3s
                &:hover
                    transform scale(1.5)
        .modal-body
            padding 42px 40px 54px
            font-size 14px
        .modal-footer
            height 82px
            line-height 82px
            text-align center
            background #f5f5f5
